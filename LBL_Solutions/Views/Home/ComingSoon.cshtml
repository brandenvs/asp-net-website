    #gate {
        background-image: url("http://5starsdesign.be/bg2.png");
        position: absolute;
        height: 50px;
        width: 100%;
        left: 0px;
        top: 130px;
        text-align: center;
        font-family: "Arial Black", Gadget, sans-serif;
        font-weight: bold;
        font-size: 40px;
        line-height: 50px;
        background-color: yellow;
        text-transform: uppercase;
        background-size: 50px 50px;
        color: white;
